<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/left_drawer_item_layout_height"
    android:paddingStart="@dimen/left_drawer_item_layout_padding_Start"
    android:paddingEnd="@dimen/left_drawer_item_layout_padding_End"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/left_drawer_item_icon_width"
        android:layout_height="@dimen/left_drawer_item_icon_height" />

    <Space
        android:layout_width="@dimen/left_drawer_item_space_width"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_drawer_item_title_margin_start"
        android:layout_marginEnd="@dimen/left_drawer_item_title_margin_end"
        android:textColor="?android:textColorPrimary" />

</LinearLayout>