<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/left_drawer_menu_space" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingStart="@dimen/left_drawer_menu_layout_padding_Start"
        android:paddingEnd="@dimen/left_drawer_menu_layout_padding_End">

        <TextView
            android:id="@+id/top_txt_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'@UserName'"
            android:textSize="@dimen/left_drawer_menu_user_name_text_size" />

        <TextView
            android:id="@+id/top_txt_uemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@email" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/left_drawer_menu_layout_space_height" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="@dimen/left_drawer_menu_items_list_weight"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/left_drawer_menu_layout_after_items_list_space" />

</LinearLayout>